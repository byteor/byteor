all: myapp

# which compiler
CC=gcc

# where are include files kept
INCLUDE=.

# options for development
CFLAGS=-g -Wall -ansi

# options for release
# CFLAGS=-O -Wall -ansi

myapp: main.o 2.o 3.o
	$(CC) -o myapp main.o 2.o 3.o

main.o: main.c a.h
	$(CC) $(CFLAGS) -I$(INCLUDE) -c main.c

2.o: 2.c a.h b.h
	$(CC) $(CFLAGS) -I$(INCLUDE) -c 2.c

3.o: 3.c b.h c.h
	$(CC) $(CFLAGS) -I$(INCLUDE) -c 3.c

clean:
	rm *.o myapp
